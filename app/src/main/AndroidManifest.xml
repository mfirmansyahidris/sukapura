<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.com.sukapura">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".SukapuraApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher__round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SukaPura"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Auth" android:screenOrientation="portrait" />
        <activity android:name=".MainMenu.Activity.ListNumber"  android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu.Activity.Scanner" android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu.Activity.ListOutlet" android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu.Activity.ProfilOD" android:screenOrientation="portrait"/>
        <activity android:name=".MainMenu.Activity.Konsinyasi" android:screenOrientation="portrait"/>
    </application>

</manifest>